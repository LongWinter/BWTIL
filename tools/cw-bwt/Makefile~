#------------------------------------------------------------------------------

CXX := clang++

SOURCE=\
../../common/common.h \
cw-bwt.cpp \
../../data_structures/CumulativeCounters.cpp \
../../data_structures/DummyDynamicBitvector.cpp \
../../data_structures/BackwardFileReader.cpp \
