BINARY=../../cw-bwt

#------------------------------------------------------------------------------

all: $(BINARY)

$(BINARY): $(SOURCE)

	$(CXX) -o $(BINARY) -O3 $(SOURCE) 

debug:

	$(CXX) $(SOURCE) -o $(BINARY) -DDEBUG

clean:

	rm -f $(BINARY)
